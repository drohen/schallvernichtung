{
    "mount": {
        "public": "/",
        "src/main": "/_dist_",
        "src/audio-worklet": "/_dist_",
        "src/dedicated-worker": "/_dist_",
        "src/entity-helpers": "/_dist_",
        "src/recording-helpers": "/_dist_"
    },
    "plugins": [
        [
            "@snowpack/plugin-run-script",
            {
                "cmd": "tsc --build src",
                "watch": "$1 --watch"
            }
        ]
    ],
	"experiments": {
		"optimize": {
			"entrypoints": ["_dist_/schallvernichtung.js"],
			"bundle": true,
			"minify": true,
			"target": "es2020"
		}
	},
    "installOptions": {
        "installTypes": true
    },
    "exclude": [
        "**/node_modules/**/*",
        "**/web_modules/**/*",
        "**/types/**/*",
        "**/tsconfig.json",
        "**/tsconfig-base.json",
        "**/tsconfig.tsbuildinfo"
    ]
}